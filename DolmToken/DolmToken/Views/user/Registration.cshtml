@model DolmToken.Models.User

@{ ViewData["Title"] = "Index"; }

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://kit.fontawesome.com/64d58efce2.js"
            crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/css/LogReg.css" />
    <title>Registration Form</title>
</head>

<body>
    <div class="container">
        <div class="=forms-container">

            <form asp-controller="user" asp-action="registration" method="post">
                <h2 class="title">Registration</h2>
                <div class="input-field">
                    <i class="fas fa-user"></i>
                    <input type="email" asp-for="email" placeholder="Your email..." />
                    <span asp-validation-for="email"></span>
                </div>
                
                <div class="input-field">
                    <i class="fas fa-user"></i>
                    <input type="text" asp-for="username" placeholder="Your username..." />
                    <span asp-validation-for="username"></span>
                </div>
                
                <div class="input-field">
                    <i class="fas fa-lock"></i>
                    <input type="password" asp-for="password" placeholder="Your password..." />
                    <span asp-validation-for="password"></span>
                </div>
                
                
                    <input type="submit" value="absenden" class="btn solid"/>
                    <input type="reset" value="abbrechen" class="btn solid"/>
                
                <p>
                    <a href="/user/Login">Hier kommen sie zum Login.</a>
                </p>
            </form>


            @section Scripts{
                <script src="~/js/registration.js" asp-append-version="true"></script>
            }
        </div>
    </div>
</body>